# Email Templates
msgid "Your OTP Code"
msgstr "Su código OTP"

msgid "One-Time Password"
msgstr "Contraseña de un solo uso"

msgid "Your One-Time Password (OTP) for login is:"
msgstr "Su contraseña de un solo uso (OTP) para iniciar sesión es:"

msgid "This OTP is valid for {expiry_time} minutes. Please use it within this timeframe to complete your login process."
msgstr "Este OTP es válido por {expiry_time} minutos. Por favor úselo dentro de este plazo para completar su proceso de inicio de sesión."

msgid "If you did not request this OTP, please ignore this email and contact our support team immediately."
msgstr "Si no solicitó este OTP, por favor ignore este correo y contacte a nuestro equipo de soporte inmediatamente."

msgid "Account Activation"
msgstr "Activación de cuenta"

msgid "Welcome to {site_name}!"
msgstr "¡Bienvenido a {site_name}!"

msgid "Thank you for registering. Please click the button below to activate your account:"
msgstr "Gracias por registrarse. Por favor haga clic en el botón de abajo para activar su cuenta:"

msgid "Activate Account"
msgstr "Activar cuenta"

msgid "If the button doesn't work, copy and paste this link into your browser:"
msgstr "Si el botón no funciona, copie y pegue este enlace en su navegador:"

msgid "This activation link will expire in 24 hours."
msgstr "Este enlace de activación expirará en 24 horas."

# Validation Messages
msgid "Invalid email format"
msgstr "Formato de correo electrónico inválido"

msgid "Password must be at least 8 characters"
msgstr "La contraseña debe tener al menos 8 caracteres"

msgid "Password must contain at least one uppercase letter"
msgstr "La contraseña debe contener al menos una letra mayúscula"

msgid "Password must contain at least one lowercase letter"
msgstr "La contraseña debe contener al menos una letra minúscula"

msgid "Password must contain at least one number"
msgstr "La contraseña debe contener al menos un número"

msgid "Password must contain at least one special character"
msgstr "La contraseña debe contener al menos un carácter especial"

msgid "First name is required"
msgstr "El nombre es requerido"

msgid "Last name is required"
msgstr "El apellido es requerido"

# Error Messages
msgid "Internal server error"
msgstr "Error interno del servidor"

msgid "Resource not found"
msgstr "Recurso no encontrado"

msgid "Unauthorized access"
msgstr "Acceso no autorizado"

msgid "Forbidden"
msgstr "Prohibido"

msgid "Bad request"
msgstr "Solicitud incorrecta"

msgid "Service unavailable"
msgstr "Servicio no disponible"

